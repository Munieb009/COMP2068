<h1>{{title}}</h1>
<p>{{parText}}</p>
<a href = "/projects/add">Add a new Project</a>

<table class = "table table-striped table-hover">
    <thead>
        <th>Name</th>
        <th>Due Date</th>
        <th>Course</th>
        <th>Actions</th>
        {{#each projects}}
            <tr>
            <td>{{this.name}}</td>
            <td>{{this.dueDate}}</td>
            <td>{{this.course}}</td>
            <td><a href="/projects/delete/{{this._id}}" class="btn btn-danger"
            onclick = "return areyousure();">
            Delete</a></td>
            </tr>
        {{/each}}
    </thead>
</table>